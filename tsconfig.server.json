{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": ".next/server",
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types", "./@types"]
  },
  "lib": ["dom", "es2018"],
  "include": ["server/**/*.ts"],
  "exclude": [".next", "node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}
