{
  "name": "bootstrap-next-ts",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=production node .next/server",
    "dev": "cross-env NODE_ENV=development nodemon --inspect=0.0.0.0:9889 server/index.ts",
    "ts-lint": "tsc --noEmit --project tsconfig.json",
    "lint": "npm run ts-lint && eslint ./ --ext .js,.ts,.tsx",
    "lint:fix": "npm run ts-lint && eslint ./ --fix --ext .js,.ts,.tsx",
    "prettier": "prettier */**/*.{js,ts,tsx} --write",
    "test": "jest"
  },
  "dependencies": {
    "@zeit/next-sass": "1.0.1",
    "@zeit/next-source-maps": "0.0.3",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "express": "4.17.1",
    "isomorphic-unfetch": "3.0.0",
    "next": "9.5.1",
    "next-compose-plugins": "2.2.0",
    "next-redux-saga": "^4.1.2",
    "next-redux-wrapper": "^6.0.2",
    "node-sass": "4.14.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reduxsauce": "^1.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/enzyme": "3.10.5",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.8",
    "@types/next-redux-saga": "^3.0.2",
    "@types/next-redux-wrapper": "^3.0.0",
    "@types/node": "14.0.27",
    "@types/react": "16.9.43",
    "@types/react-dom": "16.9.8",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "babel-jest": "26.2.2",
    "babel-plugin-import": "1.13.0",
    "cross-env": "7.0.2",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.0.8",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "jest-transform-stub": "2.0.0",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "redux-devtools-extension": "^2.13.8",
    "ts-jest": "26.1.4",
    "ts-node": "8.10.2",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  }
}
