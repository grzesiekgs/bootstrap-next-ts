{
  "name": "bootstrap-next-ts",
  "version": "1.1.1",
  "scripts": {
    "build": "next build",
    "start": "next start",
    "dev": "next",
    "ts-lint": "tsc --noEmit --project tsconfig.json",
    "lint": "npm run ts-lint && eslint ./ --ext .js,.ts,.tsx",
    "lint:fix": "npm run ts-lint && eslint ./ --fix --ext .js,.ts,.tsx",
    "prettier": "prettier */**/*.{js,ts,tsx} --write",
    "test": "jest"
  },
  "dependencies": {
    "@zeit/next-source-maps": "0.0.3",
    "next": "11.1.0",
    "next-compose-plugins": "2.2.1",
    "next-redux-saga": "4.1.2",
    "next-redux-wrapper": "6.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.4",
    "redux": "4.1.0",
    "redux-saga": "1.1.3",
    "reduxsauce": "1.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "3.10.8",
    "@types/jest": "26.0.23",
    "@types/next-redux-saga": "3.0.2",
    "@types/next-redux-wrapper": "3.0.0",
    "@types/node": "15.0.2",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.1",
    "babel-jest": "26.6.3",
    "enzyme": "3.11.0",
    "eslint": "7.25.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-transform-stub": "2.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "redux-devtools-extension": "2.13.9",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  }
}
